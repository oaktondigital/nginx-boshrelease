#!/bin/bash -ex
DOCROOTS=$(cat /var/vcap/jobs/nginx/etc/nginx.conf | grep "root /" | awk '{print $2}' | rev | cut -c 2- | rev)
for docroot in ${DOCROOTS}
do
  NGINX_DIR=${docroot}
  if [ ! -d $NGINX_DIR ]; then
    mkdir -p $NGINX_DIR
    echo "" > ${NGINX_DIR}/index.html
    chown -R vcap:vcap $NGINX_DIR
  fi
done
